<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harsh24.wastemanagement.AppMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Make a Request!"
            android:padding="24dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="0dp"
            android:height="12dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_layout4"/>

        <customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="24sp"
            android:layout_margin="16dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="Upcoming Requests"
            android:padding="24dp"
            android:textColor="@color/colorPrimaryDark"
            android:clickable="true"
            android:background="@drawable/button_layout5"/>

        <customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="History"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:padding="24dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_layout3"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
